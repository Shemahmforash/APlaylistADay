% layout 'default';
% title 'Events';

<ul>
% for my $result (@$results) {
    <li>
        <%= $result->{'year'} %> - <%= $result->{'description'} %>.

%       if( $result->{'video'}->{'id'}) {
        <iframe id="ytplayer" type="text/html" width="640" height="390"
        src="http://www.youtube.com/embed/<%= $result->{'video'}->{'id'} %>"
            frameborder="0"/></iframe>
%       }
    </li>
% }
</ul>
